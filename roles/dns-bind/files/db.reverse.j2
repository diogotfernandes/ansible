$TTL    604800
@       IN      SOA     {{ ansible_fqdn }}. admin.{{ domain }}. (
                              3         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
; name servers
      IN      NS      {{ ansible_fqdn }}.

; PTR Records
{% for key, value in records.items() %}
{% if value.type == 'A' %}
{{ value.rev }}			IN		PTR		{{ key }}.{{domain}}.
{% endif %}
{% endfor %}

$TTL    604800
@       IN      SOA     {{ ansible_fqdn }}. admin.{{ domain }}. (
                  3       ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800 )   ; Negative Cache TTL
;
; name servers - NS records
     IN      NS      {{ ansible_fqdn }}.


;name servers - A records
{% for key, value in records.items() %}
{% if value.type == 'A' %}
{{ key }}.{{domain}}.     		IN		{{ value.type }}		{{ value.forward }}
{% endif %}
{% endfor %}


;name servers - CNAME records
{% for key, value in records.items() %}
{% if value.type == 'CNAME' %}
{{ key }}     		IN		{{ value.type }}		{{ value.forward }}
{% endif %}
{% endfor %}
$INCLUDE "{{ bind_zones_path }}/default-zone-data";

; PTR Records
{% for key, value in records.items() %}
{% if value.type == 'A' %}
{% if key == '@' %}
{{ value.rev }}			IN		PTR		{{bind_domain}}.
{% else %}
{{ value.rev }}			IN		PTR		{{ key }}.{{bind_domain}}.
{% endif %}
{% endif %}
{% endfor %}

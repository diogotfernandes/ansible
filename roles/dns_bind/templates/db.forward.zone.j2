$INCLUDE "{{ bind_zones_path }}/default-zone-data";

;name servers - A records
{% for host in item.records %}
{% if host.type == 'A' %}
{{ host.name.ljust(20) }} IN {{ host.type.rjust(10) }} {{ host.forward.rjust(15) }}
{% endif %}
{% endfor %}

;name servers - CNAME records
{% for host in item.records %}
{% if host.type == 'CNAME' %}
{{ host.name.ljust(20) }} IN {{ host.type.rjust(10) }} {{ host.forward.rjust(15) }}
{% endif %}
{% endfor %}
